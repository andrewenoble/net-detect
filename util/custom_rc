### LINES

# See http://matplotlib.org/api/artist_api.html#module-matplotlib.lines

lines.linewidth           : 0.25        # line width in points
lines.linestyle           : -           # solid line
lines.marker              : o           # the default marker
lines.markeredgewidth     : 0.1        # the line width around the marker symbol
lines.markersize          : 1.25           # markersize, in points


### PATCHES

# http://matplotlib.org/api/artist_api.html#module-matplotlib.patches

patch.linewidth        : 0.50     # edge width in points
patch.edgecolor        : 262626


### FONT

# http://matplotlib.org/api/font_manager_api.html

font.family               : sans-serif 
font.sans-serif           : Helvetica
font.size                 : 8.0


### TEXT
text.color                : 262626


### AXES

# http://matplotlib.org/api/axes_api.html#module-matplotlib.axes

axes.edgecolor            : 262626      # axes edge color
axes.linewidth      	  : 0.50        # edge linewidth
axes.titlesize            : 8.0       # fontsize of the axes title
axes.labelsize            : 8.0       # fontsize of the x any y labels
axes.labelweight          : normal      # weight of the x and y labels
axes.labelcolor           : 262626
axes.axisbelow            : False        # whether axis gridlines and ticks are below
axes.color_cycle         : b, g, r, c, m, y, k  # color cycle for plot lines
                                        # as list of string colorspecs:
                                        # single letter, long name, or
                                        # web-style hex
                                            

### TICKS

# see http://matplotlib.org/api/axis_api.html#matplotlib.axis.Tick

xtick.major.size     : 2.0      # major tick size in points
xtick.minor.size     : 0.5      # minor tick size in points
xtick.major.width    : 0.5    # major tick width in points
xtick.minor.width    : 0.5    # minor tick width in points
xtick.major.pad      : 3.0      # distance to major tick label in points
xtick.minor.pad      : 0.5      # distance to the minor tick label in points
xtick.color          : 262626      # color of the tick labels
xtick.labelsize      : 8.0      # fontsize of the tick labels
xtick.direction      : out     # direction: in, out, or inout

ytick.major.size     : 2.0      # major tick size in points
ytick.minor.size     : 0.5      # minor tick size in points
ytick.major.width    : 0.5    # major tick width in points
ytick.minor.width    : 0.5    # minor tick width in points
ytick.major.pad      : 3.0     # distance to major tick label in points
ytick.minor.pad      : 0.5      # distance to the minor tick label in points
ytick.color          : 262626      # color of the tick labels
ytick.labelsize      : 8.0      # fontsize of the tick labels
ytick.direction      : out     # direction: in, out, or inout


### GRIDS

grid.color       :   262626   # grid color
grid.linestyle   :   :       # dotted
grid.linewidth   :   0.5     # in points
grid.alpha       :   1.0     # transparency, between 0.0 and 1.0

### Legend
legend.fancybox      : False  # if True, use a rounded box for the
                               # legend, else a rectangle
legend.isaxes        : False
legend.numpoints     : 1      # the number of points in the legend line
legend.fontsize      : 8.0
legend.borderpad     : 0.1    # border whitespace in fontsize units
legend.markerscale   : 2.0    # the relative size of legend markers vs. original

# the following dimensions are in axes coords
legend.labelspacing  : 1.    # the vertical space between the legend entries in fraction of fontsize
legend.handlelength  : 1.     # the length of the legend lines in fraction of fontsize
legend.handleheight  : 0.4     # the height of the legend handle in fraction of fontsize
legend.handletextpad : 0.5    # the space between the legend line and legend text in fraction of fontsize
legend.borderaxespad : 0.5   # the border between the axes and legend edge in fraction of fontsize
legend.columnspacing : 1.    # the border between the axes and legend edge in fraction of fontsize
legend.shadow        : False
legend.frameon       : False   # whether or not to draw a frame around legend
legend.scatterpoints : 1 # number of scatter points


